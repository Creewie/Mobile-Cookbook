<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp" >

        <EditText
            android:id="@+id/detailsNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nazwa przepisu" />

        <EditText
            android:id="@+id/detailsIngredientsEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Składniki" />

        <EditText
            android:id="@+id/detailsInstructionsEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Instrukcje" />

        <RatingBar
            android:id="@+id/detailsRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5" />

        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Zapisz i wyjdź" />

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usuń przepis"
            android:backgroundTint="@android:color/holo_red_light"
            android:textColor="@android:color/white"/>

    </LinearLayout>
</ScrollView>
